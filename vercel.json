{
  "version": 2,
  "buildCommand": "cd backend && npm install && npx prisma generate && npm run build",
  "installCommand": "cd backend && npm install",
  "framework": null,
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/prisma/**",
          "backend/node_modules/.prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "backend/src/main.ts"
    }
  ]
}

